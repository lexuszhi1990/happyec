<%= form_for @event do |f| %>  
   
  <%= f.label "Name" %>
  <%= f.text_field :name %>
  <%= f.label "Location" %>
  <%= f.text_field :location %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>    
  <%= f.label "Time" %>
  <%= f.datetime_select :time, :default => Event.last.time + 7.days %>
  <br >
  <%= f.submit "Create Event" %>
<% end %>  

