<% if not current_user %>  
  <%= render :partial => "stranger_teaser" %>
<%end%>

<% if current_user %>  
	<% @user= User.find(current_user.id) %>
	<% if @user.name == "happypeter"%>
		<%= link_to 'Post a New Event', new_event_path %>
        <br \>
		<%= link_to 'Mail to All Members', "/new_mail" %>
	<%end%>
<%end%>


<div class="alert alert-success">
  Our Next Meetup:
</div>
<% @events.reverse.each do |event| %>
  <% if Time.now.utc < event.time %> 
    <div id="poster">
      <div class="event_time">
		<%= event.time.to_formatted_s(:time) %>
		<%= event.time.to_formatted_s(:weekday) %>
        (<%= event.time.to_formatted_s(:day_month_year) %>)
      </div>
      <div id="poster_title">
        <%= event.name %>
      </div>
      <div class="event_location">
        Where:
        <%= link_to event.location, "/location.html" %>
        <% if current_user %>  <%# only myself can edit%>
          <% @user= User.find(current_user.id) %>
          <% if @user.name == "happypeter"%>
            <div class="edit_button">
              <%= link_to 'Edit', edit_event_path(event) %> 
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="event_content">
        <%= raw event.content %>
      </div>
    </div>
  <% end %>
<% end %> 

<div class="row-fluid">
  <div class="span6">
      <div id="past_meetups">
        <div id="past_meetups_title">
          Past Meetups
        </div>
        <div id="past_meetups_body">
          <% @events.reverse.each do |event| %>
            <% if Time.now.utc > event.time %> <%# only show the events past %>
              <%= render :partial => "event_as_past", :object => event%>
            <% end %> 
          <% end %>
        </div>
      </div>



  </div>
  <div class="span6">
      <div id="update_index">
        <div class="tab_title"> 
          Recent Updates
        </div>
          <div class="comments">
            <% @comments= Comment.find(:all, :order => "id desc", :limit => 5) %>
            <%=render @comments %>
          </div><%# .comments %>
        </div>
      </div>
  </div>
</div>


