<% if not current_user %>  
  <%= render :partial => "stranger_teaser" %>
<%else%>
  <div id="next_meetup_notice">
    Our Next Meetup:
  </div>
  <% @event=Event.last %>
  <% if Time.now.utc < @event.time %> 
    <%= render @event %>
  <% end %> 
<%end%>

<% if current_user %>  
	<% @user= User.find(current_user.id) %>
	<% if @user.name == "happypeter"%>
		<%= link_to 'Post a New Event', new_event_path %>
        <br \>
		<%= link_to 'Mail to All Members', "/new_mail" %>
	<%end%>
<%end%>


<div class="row-fluid">
  <div class="span6">
    <div id="past_meetups">
      <div id="past_meetups_title">
        Past Meetups
      </div>
      <div id="past_meetups_body">
        <% @events.reverse.each do |event| %>
          <% if Time.now.utc > event.time %> <%# only show the events past %>
            <%= render :partial => "event_as_past", :object => event%>
          <% end %> 
        <% end %>
      </div>
    </div>
  </div>
  <div class="span6">
      <div class="comments">
        <% @comments= Comment.find(:all, :order => "id desc", :limit => 5) %>
        <%=render @comments, :page_on => "event#index" %> <%# :page_on is defined by myself to decide which page is showing %>
      </div><%# .comments %>
    </div>
  </div>
</div>


