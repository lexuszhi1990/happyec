<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Location:</b>
  <%= @event.location %>
</p>

<p>
  <b>Content:</b>
  <%= @event.content %>
</p>
<p>
  <b>Comments:</b>
  <br \>
  <% @event.comments.each do |comment| %>
  <%=comment.content%>
  <br \>
  <%end%>
</p>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>






    <%= form_for(Comment.new(:event_id => @event.id)) do |f| %>
        <%= f.hidden_field :event_id %>
      <div class="field">
        <%= f.text_area :content, :size => "80x8" %>
      </div>

<% if current_user %>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
<% end %>
<% if not current_user %>
   <u><%= link_to "Log in", log_in_path(:return_to => request.url) %> </u> to Comment.
    <br \>
<% end %>

