

<div class="event">
	<div class="event_title"> 
		<%= @event.name %>
	</div>



  <div class="event_location">
    <%= @event.location %>
  </div>


  <div class="event_content">
    <%= raw @event.content %>
  </div>
  <% if current_user %>  <%# only myself can edit%>
    <% @user= User.find(current_user.id) %>
    <% if @user.name == "happypeter"%>
      <%= link_to 'Edit', edit_event_path(@event) %> 
    <%end%>
  <%end%>
</div>

<br \>
<% if current_user %>
  <%= simple_form_for(Comment.new(:event_id => @event.id, :user_id => current_user.id)) do |f| %>
    <%= f.hidden_field :event_id %>
    <%= f.hidden_field :user_id  %>
    <%= f.input :content,:input_html => { :cols => 60, :rows => 10 } %>
    <%= f.button :submit, "comment" %>
<% end %>
<% else %>
	<u><%= link_to "Log in", log_in_path(:return_to => request.url) %> </u> to Comment.
	<br \>
<% end %>
<div class="comments">
	<%= nested_comments @event.comments.arrange(:order => :created_at) %>
</div>

