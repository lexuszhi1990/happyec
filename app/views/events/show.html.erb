<div class="event">
  <div class="event_title"> 
    <%= @event.name %>
  </div>
  <div class="event_location">
    <%= @event.location %>
    <div class="edit_button">
      <% if current_user %>  <%# only myself can edit%>
        <% @user= User.find(current_user.id) %>
        <% if @user.name == "happypeter"%>
          <%= link_to 'Edit', edit_event_path(@event) %> 
        <%end%>
      <%end%>
    </div>
  </div>
  <div class="event_content">
    <%= raw @event.content %>
  </div>
</div>

<div class="comments">
<% @event.comments.each do |comment| %>
    <div class="comment">
        <div class="comment_head">
          <i class="icon-comment"></i> 
            <span class="comment_guy">
                <a href="/users/<%= User.find(comment.user_id).id %>">    
                    <%= User.find(comment.user_id).name %>
                </a>
            </span>
            <span class="comment_parent">
                <% @parent=Event.find(comment.event_id) %>
                on:
                <a href="/events/<%= @parent.id %>">
                    <%= @parent.name %>
                </a>
            </span>
            <span class="comment_time">
                <%= time_ago_in_words comment.created_at  %> ago
            </span>
        </div> <%# class="comment_head" %>
        <div class="comment_body">
            <%# need the "h" to escape <> %>
            <%= markdown( h comment.content) %>
        </div>
    </div><%# .comment%>
<% end %>
</div><%# .comments %>


<% if current_user %>
  <div class="nice_comment">
  <%= simple_form_for(Comment.new(:event_id => @event.id, :user_id => current_user.id)) do |f| %>
    <%= f.hidden_field :event_id %>
    <%= f.hidden_field :user_id  %>
    <%= f.input :content, :required => false, :label => "Comment on this meetup" %>
    <div id="comment_btn">
      <%= f.button :submit, "Comment on this meetup", :class => "btn btn-success"  %>
    </div>
  <% end %>
  </div>
<% else %>
	<u><%= link_to "Log in", log_in_path(:return_to => request.url) %> </u> to Comment.
	<br \>
<% end %>
