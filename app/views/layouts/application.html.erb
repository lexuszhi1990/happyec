<!DOCTYPE html>
<html>
<head>
  <title>English Corner</title>
  <link rel="shortcut icon" href="/images/e.png"/>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>	

<% if current_user %>  <%# only myself can see this debug message %>
  <% @user= User.find(current_user.id) %>
  <% if @user.name == "happypeter"%>
    <% flash.each do |name, msg| %>
	  <%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
  <%end%>
<%end%>

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <h3><a class="brand" href="/"><i class="icon-flag"></i>HAPPYEC</a></h3>
            <ul class="nav">
                <li><a href="#Comments">Comments</a></li>
                <li><a href="#Events">Events</a></li>

            </ul>
            <ul class="nav pull-right">
                  <% if current_user %>  
                    <% @user= User.find(current_user.id) %>
                    <li><%= link_to current_user.name, user_path(@user) %> </li>
                    <li><%= link_to "Log out", log_out_path %></li>
                  <% else %>  
                    <li><%= link_to "Log in", log_in_path %></li>
                  <% end %>  
            </ul>
        </div>
    </div>
</div>
<div id="container">

<%= yield %>

<div class="footer">
	<a href="/users">Users</a>
</div><%# id="container" %>
</body>
</html>
