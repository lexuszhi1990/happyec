<div class="nice_comment">
<%= simple_form_for(@comment) do |f| %>
  <%= f.hidden_field :parent_id %>
  <%= f.hidden_field :event_id %>
  <%= f.input :content, :label =>"Edit Comment", :required => false %>
  <div id="comment_btn">
    <%= f.button :submit, :value => "Update Comment", :class => "btn btn-success" %>
  </div>
<% end %>
</div>
